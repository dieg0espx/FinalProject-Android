<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_plain"
    tools:context=".morecipes.ShoppingList">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/alegreya_sans_thin"
        android:text="Shopping List"
        android:textColor="#FDFFFFFF"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/mSearchField3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_go2local4"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/ic_shopping_cart_white"
        android:elevation="20dp"
        android:onClick="btn_go2list"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewArticulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/mSearchField"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/btn_go2local5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="344dp"
        android:layout_marginLeft="344dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_local_recipes"
        android:elevation="20dp"
        android:onClick="btn_go2Local"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewArticulos"
        app:layout_constraintEnd_toStartOf="@+id/btn_go2local4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_go2local6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="284dp"
        android:layout_marginLeft="284dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_cloud_blanco"
        android:elevation="20dp"
        android:onClick="btn_go2Online"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewArticulos"
        app:layout_constraintEnd_toStartOf="@+id/btn_go2local5"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/bg_recyclerview"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/etDato"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_edittext"
            android:ems="10"
            android:hint="Shopping List"
            android:inputType="textCapSentences|textMultiLine"
            android:paddingLeft="8dp"
            android:textColor="#636060"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_floatinbutton"
                android:fontFamily="sans-serif-light"
                android:text="SAVE"
                android:textColor="#FFFF"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_clearbutton"
                app:srcCompat="@drawable/ic_delete_white"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>