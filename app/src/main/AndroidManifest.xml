<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.morecipes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_srecipes"
        android:label="SRecipes"
        android:roundIcon="@mipmap/icon_srecipess"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        >
        <activity android:name=".morecipes.ShoppingList"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".morecipes.Local.DeleteDataActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".morecipes.Local.UpdateDataActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".morecipes.Local.ReadDataActivity"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>

        <activity android:name=".morecipes.Local.AddDataActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".morecipes.Online.MainActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".morecipes.Online.MostrarDatosActivity"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"/>

        <activity android:name=".morecipes.SplashScreen"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>